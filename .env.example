# OpenAI API Configuration
OPENAI_API_KEY=sk-...                        # Required: Your OpenAI API key
OPENAI_MODEL=gpt-5-mini                      # Model to use (gpt-5-mini, gpt-5, etc.)

# Database Configuration
PAPER_AUTOPILOT_DB_URL=sqlite:///paper_autopilot.db  # Database connection string
# For PostgreSQL: postgresql://user:password@localhost:5432/paper_autopilot

# API Configuration
API_TIMEOUT_SECONDS=300                      # Responses API timeout (5 minutes)
MAX_RETRIES=5                               # Maximum retry attempts for API calls
RATE_LIMIT_RPM=60                           # Requests per minute limit

# Token & Cost Configuration
# Pricing per 1M tokens (update based on OpenAI pricing)
PROMPT_TOKEN_PRICE_PER_MILLION=0.15         # Input tokens cost
COMPLETION_TOKEN_PRICE_PER_MILLION=0.60     # Output tokens cost
CACHED_TOKEN_PRICE_PER_MILLION=0.075        # Cached input tokens cost (50% discount)

# Cost Alerts
COST_ALERT_THRESHOLD_1=10.00                # Alert at $10
COST_ALERT_THRESHOLD_2=50.00                # Alert at $50
COST_ALERT_THRESHOLD_3=100.00               # Alert at $100

# Processing Configuration
BATCH_SIZE=10                               # PDFs to process in parallel
MAX_WORKERS=3                               # Thread pool size
PROCESSING_TIMEOUT_PER_DOC=60               # Seconds per document

# Logging Configuration
LOG_LEVEL=INFO                              # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json                             # json or text
LOG_FILE=logs/paper_autopilot.log          # Log file path
LOG_MAX_BYTES=10485760                      # 10MB per log file
LOG_BACKUP_COUNT=5                          # Keep 5 backup files

# Vector Store Configuration
VECTOR_STORE_NAME=paper_autopilot_docs      # OpenAI vector store name
VECTOR_STORE_CACHE_FILE=.paper_autopilot_vs_id  # Cache file for vector store ID

# File Management
PROCESSED_RETENTION_DAYS=30                 # Days to keep processed PDFs
FAILED_RETRY_ATTEMPTS=3                     # Retry attempts for failed docs
